	  <forum>https://forum.kodi.tv/showthread.php?tid=346302</forum>
	  <website></website>
	  <email></email>
	  <source>https://github.com/bartolomesoriano/skin.xonfluencevn</source>
    <assets>
      <icon>icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
